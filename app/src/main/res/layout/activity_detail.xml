<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@color/white">


  <ImageView
      android:id="@+id/img_back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="15dp"
      android:layout_marginTop="15dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_back" />

  <TextView
      android:id="@+id/txtEdtRsp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/poppins_semi_bold"
      android:text="Detail Resep"
      android:textColor="@color/hijauBR"
      android:textSize="22sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/img_back" />

  <ScrollView
      android:id="@+id/scrollView2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerInParent="true"
      android:paddingHorizontal="20dp"
      android:layout_marginTop="10dp"
      android:paddingBottom="20dp"
      android:scrollbarThumbVertical="@null"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtEdtRsp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:elevation="10dp"
          app:cardCornerRadius="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/food_detail" />

      </androidx.cardview.widget.CardView>

      <TextView
          android:id="@+id/txt_judul"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:fontFamily="@font/poppins_semi_bold"
          android:text="Judul"
          android:textColor="@color/hijauBR"
          android:textSize="20sp" />

      <TextView
          android:id="@+id/txt_penulis"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/poppins_regular"
          android:text="penulis"
          android:textColor="@color/htm2"
          android:textSize="12sp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:fontFamily="@font/poppins_medium"
          android:text="Deskripsi"
          android:textColor="@color/htm1"
          android:textSize="16sp" />

      <TextView
          android:id="@+id/txt_deskripsi"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:fontFamily="@font/poppins_regular"
          android:text="deskripsi"
          android:textColor="@color/htm1"
          android:textSize="14sp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:fontFamily="@font/poppins_medium"
          android:text="Bahan-bahan"
          android:textColor="@color/htm1"
          android:textSize="16sp" />

      <TextView
          android:id="@+id/txt_bahan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:fontFamily="@font/poppins_regular"
          android:text="bahan"
          android:textColor="@color/htm1"
          android:textSize="14sp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:fontFamily="@font/poppins_medium"
          android:text="Cara Memasak"
          android:textColor="@color/htm1"
          android:textSize="16sp" />

      <TextView
          android:id="@+id/txt_cara"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:fontFamily="@font/poppins_regular"
          android:text="Cara masak"
          android:textColor="@color/htm1"
          android:textSize="14sp" />


    </LinearLayout>

  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>